@page
@model FitTrackPro.Pages.ProgressTracking.CreateModel
@{
    ViewData["Title"] = "New Measurements";
}

<form method="post">
    <h2 class="text-center mb-4">New Body Measurements</h2>
    
    <div class="container" style="max-width: 800px;">

        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Body Composition</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="BodyMeasurement.Weight" class="form-label">Weight (kg)</label>
                        <input asp-for="BodyMeasurement.Weight" type="number" step="1" class="form-control" />
                        <span asp-validation-for="BodyMeasurement.Weight" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BodyMeasurement.BodyFat" class="form-label">Body Fat (%)</label>
                        <input asp-for="BodyMeasurement.BodyFat" type="number" min="0" max="100" step="0.1" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="BodyMeasurement.MuscleMass" class="form-label">Muscle Mass (%)</label>
                        <input asp-for="BodyMeasurement.MuscleMass" type="number" min="0" max="100" step="0.1" class="form-control" />
                    </div>

                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Body Measurements (cm)</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="BodyMeasurement.Chest" class="form-label">Chest</label>
                        <input asp-for="BodyMeasurement.Chest" type="number" step="0.1" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BodyMeasurement.Waist" class="form-label">Waist</label>
                        <input asp-for="BodyMeasurement.Waist" type="number" step="0.1" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="BodyMeasurement.Arms" class="form-label">Arms</label>
                        <input asp-for="BodyMeasurement.Arms" type="number" step="0.1" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BodyMeasurement.Legs" class="form-label">Legs</label>
                        <input asp-for="BodyMeasurement.Legs" type="number" step="0.1" class="form-control" />
                    </div>
                </div>

            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-outline-primary btn">Save Measurements</button>
            <a href="/ProgressTracking" class="btn btn-danger btn" >Exit</a>
        </div>
    </div>
</form>