@page
@model FitTrackPro.Pages.Recipes.TemplatesModel
@using FitTrackPro.Models
@{
    ViewData["Title"] = "Meal Plan Templates";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <h1>Meal Plan Templates</h1>
            <p class="text-muted">Manage your saved meal plan templates</p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <a asp-page="./Planner" class="btn btn-primary">Back to Meal Planner</a>
            <a asp-page="./Index" class="btn btn-secondary">Back to Recipes</a>
        </div>
    </div>

    <div class="row">
        @if (Model.templates.Any())
        {
            @foreach (var template in Model.templates)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@template.templateName</h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrWhiteSpace(template.description))
                            {
                                <p class="card-text text-muted">@template.description</p>
                            }
                            else
                            {
                                <p class="card-text text-muted fst-italic">No description</p>
                            }

                            <div class="mb-3">
                                <small class="text-muted">
                                    Created: @template.createdDate.ToString("MMM dd, yyyy") |
                                    Used @template.timesUsed times
                                </small>
                            </div>

                            <h6>Meals in Template:</h6>
                            @if (template.templateItems.Any())
                            {
                                <div class="list-group mb-3">
                                    @foreach (var item in template.templateItems.OrderBy(i => i.dayOfWeek).ThenBy(i => i.mealType))
                                    {
                                        var dayName = item.dayOfWeek switch
                                        {
                                            0 => "Monday",
                                            1 => "Tuesday",
                                            2 => "Wednesday",
                                            3 => "Thursday",
                                            4 => "Friday",
                                            5 => "Saturday",
                                            6 => "Sunday",
                                            _ => "Unknown"
                                        };

                                        <div class="list-group-item p-2">
                                            <small>
                                                <strong>@dayName - @item.mealType:</strong>
                                                @item.recipe.recipeName
                                                <span class="text-muted">(@item.recipe.caloriesPerServing cal)</span>
                                            </small>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No meals in this template.</p>
                            }

                            <div class="d-grid gap-2">
                                <a asp-page="./Planner" class="btn btn-success">Use This Template</a>
                                <form method="post" asp-page-handler="DeleteTemplate" asp-route-templateId="@template.templateId" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this template? This cannot be undone.');">
                                    <button type="submit" class="btn btn-danger w-100">Delete Template</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <div class="alert alert-info">
                    <h5>No Templates Yet</h5>
                    <p>You haven't created any meal plan templates yet.</p>
                    <p>To create a template:</p>
                    <ol>
                        <li>Go to the <a asp-page="./Planner" class="alert-link">Meal Planner</a></li>
                        <li>Fill out a week with your favorite meals</li>
                        <li>Click "Save as Template" and give it a name</li>
                    </ol>
                    <a asp-page="./Planner" class="btn btn-primary">Go to Meal Planner</a>
                </div>
            </div>
        }
    </div>
</div>
