@page
@model FitTrackPro.Pages.Recipes.PlannerModel
@using FitTrackPro.Models
@{
    ViewData["Title"] = "Weekly Meal Planner";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <h1>Weekly Meal Planner</h1>
            <p class="text-muted">Week of @Model.currentWeekStart.ToString("MMM dd, yyyy")</p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <!-- Week Navigation -->
    <div class="row mb-3">
        <div class="col-md-12">
            <a asp-page="./Planner" asp-route-weekStart="@Model.currentWeekStart.AddDays(-7).ToString("yyyy-MM-dd")" class="btn btn-secondary">Previous Week</a>
            <a asp-page="./Planner" class="btn btn-primary">This Week</a>
            <a asp-page="./Planner" asp-route-weekStart="@Model.currentWeekStart.AddDays(7).ToString("yyyy-MM-dd")" class="btn btn-secondary">Next Week</a>
            <a asp-page="./Index" class="btn btn-info float-end">Back to Recipes</a>
            <a asp-page="./ShoppingList" class="btn btn-success float-end me-2">Shopping List</a>
            <a asp-page="./Templates" class="btn btn-warning float-end me-2">View Templates</a>
        </div>
    </div>

    <!-- Weekly Meal Grid -->
    <div class="table-responsive mb-4">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th width="15%">Day</th>
                    <th width="28%">Breakfast</th>
                    <th width="28%">Lunch</th>
                    <th width="28%">Dinner</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 7; i++)
                {
                    var currentDate = Model.currentWeekStart.AddDays(i);
                    var dayName = currentDate.ToString("dddd");
                    var dateString = currentDate.ToString("MMM dd");

                    <tr>
                        <td class="align-middle">
                            <strong>@dayName</strong><br />
                            <small class="text-muted">@dateString</small>
                        </td>

                        @foreach (MealType mealType in Enum.GetValues(typeof(MealType)))
                        {
                            var mealPlan = Model.getMealPlanForSlot(currentDate, mealType);

                            <td>
                                @if (mealPlan != null && mealPlan.recipe != null)
                                {
                                    <div class="card bg-light">
                                        <div class="card-body p-2">
                                            <h6 class="mb-1">@mealPlan.recipe.recipeName</h6>
                                            <small class="text-muted">
                                                @mealPlan.recipe.caloriesPerServing cal |
                                                P:@mealPlan.recipe.proteinGrams g
                                            </small>
                                            <div class="mt-2">
                                                <a asp-page="./Details" asp-route-id="@mealPlan.recipe.recipeId" class="btn btn-sm btn-info">View</a>
                                                <form method="post" asp-page-handler="RemoveMeal" asp-route-mealPlanId="@mealPlan.mealPlanId"
                                                      asp-route-weekStart="@Model.currentWeekStart.ToString("yyyy-MM-dd")" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-outline-primary w-100"
                                            data-bs-toggle="modal" data-bs-target="#assignRecipeModal"
                                            onclick="setSlotInfo('@currentDate.ToString("yyyy-MM-dd")', @((int)mealType), '@dayName', '@mealType')">
                                        + Add Recipe
                                    </button>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Weekly Nutrition Summary -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Weekly Nutrition Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-2">
                            <h4>@Model.weeklyNutrition.GetValueOrDefault("avgCalories", 0).ToString("F0")</h4>
                            <small>Avg Calories/Day</small>
                        </div>
                        <div class="col-md-2">
                            <h4>@Model.weeklyNutrition.GetValueOrDefault("avgProtein", 0).ToString("F1") g</h4>
                            <small>Avg Protein/Day</small>
                        </div>
                        <div class="col-md-2">
                            <h4>@Model.weeklyNutrition.GetValueOrDefault("avgCarbs", 0).ToString("F1") g</h4>
                            <small>Avg Carbs/Day</small>
                        </div>
                        <div class="col-md-2">
                            <h4>@Model.weeklyNutrition.GetValueOrDefault("avgFats", 0).ToString("F1") g</h4>
                            <small>Avg Fats/Day</small>
                        </div>
                        <div class="col-md-2">
                            <h4>@Model.weeklyNutrition.GetValueOrDefault("totalCalories", 0).ToString("F0")</h4>
                            <small>Total Calories</small>
                        </div>
                        <div class="col-md-2">
                            <h4>@Model.weeklyNutrition.GetValueOrDefault("daysPlanned", 0)</h4>
                            <small>Days Planned</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#copyDayModal">Copy Day</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#clearWeekModal">Clear Week</button>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#saveTemplateModal">Save as Template</button>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loadTemplateModal">Load Template</button>
        </div>
    </div>
</div>

<!-- Assign Recipe Modal -->
<div class="modal fade" id="assignRecipeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign Recipe to <span id="slotInfo"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="AssignRecipe">
                <div class="modal-body">
                    <input type="hidden" name="selectedDate" id="selectedDate" />
                    <input type="hidden" name="selectedMealType" id="selectedMealType" />

                    <div class="mb-3">
                        <label class="form-label">Select Recipe:</label>
                        <select name="selectedRecipeId" class="form-select" required>
                            <option value="">Choose a recipe...</option>
                            @foreach (var category in Model.allRecipes.GroupBy(r => r.category))
                            {
                                <optgroup label="@category.Key">
                                    @foreach (var recipe in category)
                                    {
                                        <option value="@recipe.recipeId">@recipe.recipeName (@recipe.caloriesPerServing cal)</option>
                                    }
                                </optgroup>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Assign Recipe</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Copy Day Modal -->
<div class="modal fade" id="copyDayModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Copy Day</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="CopyDay">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">From Date:</label>
                        <input type="date" name="sourceDate" class="form-control" value="@Model.currentWeekStart.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To Date:</label>
                        <input type="date" name="targetDate" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Copy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Clear Week Modal -->
<div class="modal fade" id="clearWeekModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Clear Entire Week?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="ClearWeek" asp-route-weekStart="@Model.currentWeekStart.ToString("yyyy-MM-dd")">
                <div class="modal-body">
                    <p>Are you sure you want to clear all meals for this week? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Clear Week</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Save Template Modal -->
<div class="modal fade" id="saveTemplateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Save as Template</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="SaveTemplate" asp-route-weekStart="@Model.currentWeekStart.ToString("yyyy-MM-dd")">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Template Name:</label>
                        <input type="text" name="templateName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description (optional):</label>
                        <textarea name="templateDescription" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Template</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Load Template Modal -->
<div class="modal fade" id="loadTemplateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Load Template</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="LoadTemplate" asp-route-weekStart="@Model.currentWeekStart.ToString("yyyy-MM-dd")">
                <div class="modal-body">
                    @if (Model.templates.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label">Select Template:</label>
                            <select name="templateId" class="form-select" required>
                                <option value="">Choose a template...</option>
                                @foreach (var template in Model.templates)
                                {
                                    <option value="@template.templateId">@template.templateName (used @template.timesUsed times)</option>
                                }
                            </select>
                        </div>
                        <p class="text-warning"><small>This will replace the current week's meal plan.</small></p>
                    }
                    else
                    {
                        <p class="text-muted">No templates saved yet. Create one by filling out a week and clicking "Save as Template".</p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    @if (Model.templates.Any())
                    {
                        <button type="submit" class="btn btn-primary">Load Template</button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setSlotInfo(date, mealType, dayName, mealTypeName) {
            document.getElementById('selectedDate').value = date;
            document.getElementById('selectedMealType').value = mealType;
            document.getElementById('slotInfo').textContent = dayName + ' - ' + mealTypeName;
        }
    </script>
}
