@page
@model FitTrackPro.Pages.Workouts.IndexModel
@{
    ViewData["Title"] = "Workouts";
}
<partial name="_WorkoutNav" />

<h1>My Routines</h1>
<hr />
@if (Model.Routines.Any())
{
        <div class="list-group mb-4">
        @foreach (var routine in Model.Routines)
        {
                    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">@routine.Name</h5>
                            <small>@routine.Description</small>
                        </div>
                        <a asp-page="/Workouts/Session" asp-route-routineId="@routine.Id" class="btn btn-success">Start Session</a>
                    </div>
        }
        </div>
}
else
{
        <p>You haven't created any routines yet. Go to the <a asp-page="/Workouts/Builder">Workout Builder</a> to create one!</p>
}


<h1 class="mt-5">Exercise Library</h1>
<hr />
<p>
    <a asp-page="Create" class="btn btn-primary">Create New Exercise</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Muscle Group</th>
            <th>Difficulty</th>
            <th>Equipment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Exercises)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.MuscleGroup)</td>
                    <td>@Html.DisplayFor(modelItem => item.Difficulty)</td>
                    <td>@Html.DisplayFor(modelItem => item.Equipment)</td>
                </tr>
        }
    </tbody>
</table>