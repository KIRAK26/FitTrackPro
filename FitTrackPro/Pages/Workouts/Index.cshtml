@page
@model FitTrackPro.Pages.Workouts.IndexModel
@{
    ViewData["Title"] = "Workouts";
}
<partial name="_WorkoutNav" />

<style>
  html { scroll-behavior: auto !important; }
</style>

<h1>My Routines</h1>
<hr />
@if (Model.Routines.Any())
{
            <div class="list-group mb-4">
        @foreach (var routine in Model.Routines)
        {
                            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div>

                                    <h5 class="mb-1">@routine.Name</h5>
                                    <small>@routine.Description</small>
                                </div>
                                <a asp-page="/Workouts/Session" asp-route-routineId="@routine.Id" 
        class="btn btn-success">Start Session</a>
                            </div>
        }
            </div>
}
else
{
            <p>You haven't created any routines yet.
    Go to the <a asp-page="/Workouts/Builder">Workout Builder</a> to create one!</p>
}


<h1 class="mt-5" id="exercise-library">Exercise Library</h1>
<hr />

<form method="get" class="mb-4 p-3 border rounded bg-light" asp-fragment="exercise-library">
    <div class="row g-3 align-items-end">
        <div class="col-sm-12 col-md-3">
            <label asp-for="SearchTerm" class="form-label fw-bold">Search by Name</label>
            <input asp-for="SearchTerm" class="form-control" />
        </div>
        <div class="col-sm-6 col-md-3">
            <label asp-for="SelectedMuscleGroup" class="form-label fw-bold">Muscle Group</label>
            <select asp-for="SelectedMuscleGroup" asp-items="Model.MuscleGroups" class="form-select"></select>
        </div>
        <div class="col-sm-6 col-md-2">
            <label asp-for="SelectedDifficulty" class="form-label fw-bold">Difficulty</label>
            <select asp-for="SelectedDifficulty" asp-items="Model.Difficulties" class="form-select"></select>
        </div>
        <div class="col-sm-6 col-md-2">
            <label asp-for="SelectedEquipment" class="form-label fw-bold">Equipment</label>
            <select asp-for="SelectedEquipment" asp-items="Model.Equipment" class="form-select"></select>
        </div>
        <div class="col-sm-6 col-md-2">
            <button type="submit" class="btn btn-primary w-100">Apply</button>
        </div>
    </div>
</form>
<p>
    <a asp-page="Create" class="btn btn-primary">Create New Exercise</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Muscle Group</th>
            <th>Difficulty</th>
            <th>Equipment</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Exercises)
        {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.MuscleGroup)</td>
                        <td>@Html.DisplayFor(modelItem =>
item.Difficulty)</td>
                        <td>@Html.DisplayFor(modelItem => item.Equipment)</td>
                    </tr>
        }
    </tbody>
</table>