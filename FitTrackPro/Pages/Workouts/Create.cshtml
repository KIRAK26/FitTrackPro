@page
@model FitTrackPro.Pages.Workouts.CreateModel
@{
    ViewData["Title"] = "Create Exercise";
}

<h1>@ViewData["Title"]</h1>
<h4>Add a new exercise to the library</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Exercise.Name" class="control-label"></label>
                <input asp-for="Exercise.Name" class="form-control" />
                <span asp-validation-for="Exercise.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Exercise.MuscleGroup" class="control-label"></label>
                <select asp-for="Exercise.MuscleGroup" asp-items="Model.MuscleGroups" class="form-select"></select>

                <span asp-validation-for="Exercise.MuscleGroup" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Exercise.Difficulty" class="control-label"></label>
                <select asp-for="Exercise.Difficulty" asp-items="Model.Difficulties" class="form-select"></select>

                <span asp-validation-for="Exercise.Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Exercise.Equipment" class="control-label"></label>
                <select asp-for="Exercise.Equipment" asp-items="Model.Equipment" class="form-select"></select>

                <span asp-validation-for="Exercise.Equipment" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Exercise.Instructions" class="control-label"></label>
                <textarea asp-for="Exercise.Instructions" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Exercise.Instructions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        
    }
}